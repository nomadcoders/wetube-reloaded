        header
            h1=pageTitle
            nav
                ul
                    li
                        a(href="/") Home
                    if !req.session.loggedIn
                        li
                            a(href="/join")  Join
                        li
                            a(href="/login")  Login                        
                    li
                        a(href="/search") Search
                    li
                        a(href="/videos/upload") Upload Video
        main
            block content
    include partials/footer